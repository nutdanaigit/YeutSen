<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">


    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <GridLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:stretchMode="columnWidth"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:text="Total stretches"
                android:textSize="20dp"
                android:layout_columnSpan="1"/>

            <TextView
                android:id="@+id/total_stretches"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Monthly stretches"
                android:textSize="20dp"
                android:layout_columnSpan="1"/>

            <TextView
                android:id="@+id/monthly_stretches"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50dp"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Weekly stretches"
                />

            <TextView
                android:id="@+id/weekly_stretches"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50dp"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Today's stretches"
                android:textSize="20dp"
                android:layout_columnSpan="1"/>

            <TextView
                android:id="@+id/today_stretches"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50dp"
                android:layout_row="3"
                android:layout_column="1"
                android:textColor="@color/colorPrimary"/>


        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly summary"
            android:textSize="25dp"
            android:id="@+id/weekly_textview"
            android:layout_margin="5dp"/>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/graph"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


    </LinearLayout>


</ScrollView>